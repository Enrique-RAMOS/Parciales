@model Ejemplo_Capas.Models.Courses

@{
    ViewBag.Title = "Registrar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Registrar</h2>
@using (Html.BeginForm("Registrar", "Enrollement", FormMethod.Post))
{

    <label>Titulo</label>


    @Html.TextBoxFor(a => a.Title)
    <br />



    <label>Creditos</label>


    @Html.TextBoxFor(a => a.Credits)

    <br />
    <br />

    <input type="submit" value="Agregar" />

}